<% layout('../../layouts/mainLayout') -%>
<!-- BEGIN: Content-->
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- cms list start -->
            <section class="app-user-list">
                <!-- list and filter start -->
                <div class="card">
                    <div class="card-body border-bottom">
                        <h4 class="card-title"><%= page_title %></h4>
                    </div>
                    <div class="card-datatable table-responsive pt-0">
                        <table class="user-list-table table">
                            <thead class="table-light">
                                <tr>
                                    <th></th>
                                    <th>Title</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- Modal to add new cms starts-->
                    <div class="modal modal-slide-in new-cms-modal fade" id="modals-slide-in">
                        <div class="modal-dialog">
                            <form class="add-new-cms modal-content pt-0" id="edit-new-cms" action="/cms/update" method="POST" enctype='multipart/form-data'>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">Ã—</button>
                                <div class="modal-header mb-1">
                                    <h5 class="modal-title" id="exampleModalLabel">Update CMS</h5>
                                </div>
                                <div class="modal-body flex-grow-1">
                                    <div class="mb-1">
                                        <label class="form-label" for="title">Title</label><span style="color: red;">*</span>
                                        <input type="text" class="form-control dt-title" id="title" placeholder="Title" name="title" readonly/>
                                    </div>
                                    <div class="mb-1">
                                        <label class="form-label" for="content">Content</label><span style="color: red;">*</span>
                                        <textarea class="form-control required" id="content" name="content" rows="4"></textarea>
                                    </div>

                                    <input type="hidden" name="id" id="id" value="">
                                    <button type="submit" class="btn btn-primary me-1 data-submit">Update</button>
                                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Modal to add new cms Ends-->
                </div>
                <!-- list and filter end -->
            </section>
            <!-- cms list ends -->

        </div>
    </div>
</div>
<!-- END: Content-->

<!-- BEGIN: Datatable JS-->
<script src="/js/datatables/app-cms-general-list.js"></script>
<!-- END: Datatable JS-->